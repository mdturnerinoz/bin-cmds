#
# set the properties common to difftool and mergetool
#
git config --global merge.tool araxis
git config --global diff.tool  araxis
git config --global --add difftool.prompt  false
git config --global --add mergetool.prompt false

#
# set the mergetoll-specific properties
#
git config --global mergetool.araxis.cmd "araxis"
git config --global mergetool.araxis.trustExitCode true
git config --global mergetool.araxis.path 'path = '/Applications/Araxis\ Merge.app/Contents/Utilities/compare'
git config --global mergetool.keepBackup false

#
# set the difftool-specific properties
#
git config --global difftool.araxis.cmd "araxis"
git config --global difftool.araxis.trustExitCode true
git config --global difftool.araxis.path 'path = '/Applications/Araxis\ Merge.app/Contents/Utilities/compare'